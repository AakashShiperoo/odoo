<odoo>
    <record id="view_pack_config_form" model="ir.ui.view">
        <field name="name">pack.config.form</field>
        <field name="model">pack.config</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="max_single_line_orders"/>
                    <field name="max_multi_line_orders"/>
                    <field name="single_line_tag"/>
                    <field name="multi_line_tag"/>
                </group>
            </form>
        </field>
    </record>

    <record id="pack_config_action" model="ir.actions.act_window">
        <field name="name">Pack Configuration</field>
        <field name="res_model">pack.config</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
