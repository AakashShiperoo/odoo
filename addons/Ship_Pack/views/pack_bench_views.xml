<odoo>
    <record id="view_pack_bench_form" model="ir.ui.view">
        <field name="name">pack.bench.form</field>
        <field name="model">pack.bench</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="user_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_pack_bench_tree" model="ir.ui.view">
        <field name="name">pack.bench.tree</field>
        <field name="model">pack.bench</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="view_pack_bench_kanban" model="ir.ui.view">
        <field name="name">pack.bench.kanban</field>
        <field name="model">pack.bench</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_card">
                            <strong><field name="name"/></strong>
                            <div>
                                <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </div>
                            <div>
                                <field name="user_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pack_bench_action" model="ir.actions.act_window">
        <field name="name">Pack Benches</field>
        <field name="res_model">pack.bench</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="menu_stock_custom_root" name="Stock" sequence="10"/>

    <menuitem id="menu_pack_bench" name="Pack Benches" parent="menu_stock_custom_root" action="pack_bench_action"/>
</odoo>
