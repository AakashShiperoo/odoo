<odoo>
    <!-- Define the action first -->
    <record id="action_inventory_message_log" model="ir.actions.act_window">
        <field name="name">Inventory Message Logs</field>
        <field name="res_model">inventory.message.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Create a new parent menu item if necessary -->
    <menuitem id="menu_stock_custom_root" name="Stock" sequence="10"/>

    <!-- Then reference the action in the menu item -->
    <menuitem id="menu_inventory_message_log"
              name="Inventory Message Logs"
              parent="menu_stock_custom_root"
              action="action_inventory_message_log"/>

    <record id="view_inventory_message_log_tree" model="ir.ui.view">
        <field name="name">inventory.message.log.tree</field>
        <field name="model">inventory.message.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="picking_id"/>
                <field name="message"/>
                <field name="status"/>
                <field name="received_at"/>
            </tree>
        </field>
    </record>

    <record id="view_inventory_message_log_form" model="ir.ui.view">
        <field name="name">inventory.message.log.form</field>
        <field name="model">inventory.message.log</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="picking_id"/>
                    <field name="message"/>
                    <field name="status"/>
                    <field name="received_at"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
