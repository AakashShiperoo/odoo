<odoo>
    <record id="view_pack_station_form" model="ir.ui.view">
        <field name="name">pack.station.form</field>
        <field name="model">pack.station</field>
        <field name="arch" type="xml">
            <form string="Pack Station">
                <group>
                    <field name="name"/>
                    <field name="hu_scanned"/>
                    <field name="pack_bench_id"/>
                    <field name="virtual_locations"/>
                </group>
                <footer>
                    <button string="Scan HU" type="object" name="scan_hu_action" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
